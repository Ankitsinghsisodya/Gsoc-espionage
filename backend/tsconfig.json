{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2022"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "paths": {
            "@core/*": [
                "core/*"
            ],
            "@infrastructure/*": [
                "infrastructure/*"
            ],
            "@application/*": [
                "application/*"
            ],
            "@presentation/*": [
                "presentation/*"
            ],
            "@shared/*": [
                "shared/*"
            ],
            "@config/*": [
                "config/*"
            ],
            "@models/*": [
                "models/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tests"
    ]
}